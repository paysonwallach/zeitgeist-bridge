{
  "name": "zeitgeist-browser-connector",
  "description": "Native host for browser extensions.",
  "license": "GPL-3.0",
  "author": "Payson Wallach <payson@paysonwallach.com>",
  "version": "0.1.0",
  "scripts": {
    "format": "run-p format:*",
    "format:js": "prettier --write .",
    "format:package.json": "prettier-package-json --write",
    "format:vala": "find . -name '*.vala' -exec uncrustify -c uncrustify.cfg --replace {} \\;",
    "pre-release": "scrivano",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "prettier-package-json": "^2.1.3",
    "scrivano": "^0.1.0",
    "standard-version": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run pre-release"
    }
  }
}
